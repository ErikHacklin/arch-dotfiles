    "tooltip-format": "Û∞àÄ {ifname} via {gwaddr}",
    "format-linked": "Û∞àÄ {ifname} (No IP)",
    "format-disconnected": "Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },
  "bluetooth": {
    "format-disabled": "Û∞ÇØ {status}",
    "format-off": "",
